<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FAFAFA"
    android:orientation="vertical" >

    <!-- 首页TOP -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#0855C2"
        android:orientation="horizontal"
        
        android:padding="5dip" >
    <TextView
            android:id="@+id/textHomeSearch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="课程管理"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white" 
            android:paddingLeft="30dip" />
        <EditText
            android:id="@+id/textHomeSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_search"
            android:drawableLeft="@drawable/zoom"
            android:visibility="gone"
            android:hint="搜索商品"
            android:textSize="15dp"
            android:padding="5dip" />
              <TextView
            android:id="@+id/imageSearch"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
                android:textSize="15dp"
                android:text="查看已选课程"
            android:textColor="@color/white" 
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            
            android:gravity="center_vertical" />
    </RelativeLayout>
        <ListView
        android:id="@+id/goodsListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#f5f5f5"
        android:divider="@drawable/cart_listview_gap"
        android:drawSelectorOnTop="false"
        android:listSelector="#00000000"
        android:fadingEdge="none" />
